<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields

    @foreach (Dictionary<string, string> jobs in ViewBag.jobs)
    {
        <p>Name</p>
        <p>@jobs["name"]</p>

        <br />

        <p>Employer</p>
        <p>@jobs["employer"]</p>

        <br />

        <p>Postion Type</p>
        <p>@jobs["position type"]</p>

        <br />

        <p>Core Competency</p>
        <p>@jobs["core competency"]</p>

        <br />

        <p>Location</p>
        <p>@jobs["location"]</p>

        <br />
        <hr />
    }
}